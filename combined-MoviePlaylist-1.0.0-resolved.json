                "schema": {
                  "$ref": "#/components/schemas/Watchlist"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Watchlist"
                }
              }
            }
          },
          "404": {
            "description": "Watchlist not found for user"
