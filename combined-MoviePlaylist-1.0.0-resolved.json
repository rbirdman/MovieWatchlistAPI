  "tags": [
    {
      "name": "Watchlist",
      "description": "APIs that revolve around the watchlist"
    },
    {
      "name": "Authentication",
      "description": "APIs for logging in and out of the API"
    },
    {
      "name": "Users",
      "description": "APIs for creating new users"
