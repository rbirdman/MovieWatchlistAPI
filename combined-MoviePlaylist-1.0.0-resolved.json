  "components": {
    "schemas": {
      "MediaItem": {
        "required": [
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "uint32",
            "example": 5
          },
          "name": {
            "type": "string",
            "example": "The Good Doctor"
          }
        }
      },
      "Watchlist": {
        "required": [
          "id",
          "isPubliclyViewable",
          "mediaItems",
          "ownerUserId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "isPubliclyViewable": {
            "type": "boolean",
            "example": true
          },
          "ownerUserId": {
            "type": "integer",
            "example": 3
          },
          "mediaItems": {
            "type": "array",
