          },
          "id": {
            "type": "string",
            "example": "nm0306201"
          },
          "image": {
            "type": "string",
            "example": "https://imdb-api.com/images/original/MV5BMTUyNTkxODIxN15BMl5BanBnXkFtZTgwOTU2MDAwMTE@._V1_Ratio1.0000_AL_.jpg"
          },
